<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    card_view:cardCornerRadius="30dp"
    card_view:cardElevation="1dp"
    android:layout_margin="30dp"
    android:id="@+id/cardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.pie.herethere.NotoBoldText
            android:id="@+id/wvalue_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="관광지"
            android:textSize="35dp" />

        <RelativeLayout
            android:id="@+id/tod"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tom"
            android:layout_alignBottom="@+id/tom"
            android:layout_toStartOf="@+id/tom">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="오늘" />

            <ImageView
                android:id="@+id/wvalue_img1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/s_5" />

            <TextView
                android:id="@+id/wvalue_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wvalue_img1"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="맑음"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/wvalue_ondo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wvalue_text1"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Null" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tom"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wvalue_toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="내일" />

            <ImageView
                android:id="@+id/wvalue_img2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:src="@drawable/s_5" />

            <TextView
                android:textSize="20dp"
                android:id="@+id/wvalue_text2"
                android:gravity="center"
                android:text="맑음"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wvalue_img2"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/wvalue_ondo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wvalue_text2"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Null" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tom2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tom"
            android:layout_alignBottom="@+id/tom"
            android:layout_toEndOf="@+id/tom">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="모레" />

            <ImageView
                android:id="@+id/wvalue_img3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:src="@drawable/s_5" />

            <TextView
                android:id="@+id/wvalue_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wvalue_img3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="맑음"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/wvalue_ondo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wvalue_text3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Null" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>